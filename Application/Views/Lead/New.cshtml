@model Source.Models.Leed
@using Source.Models
<h2>Adicionar novo Lead</h2>

<form asp-action="New" asp-controller="Lead" method="post" class="needs-validation" novalidate>
    <div class="mb-3">
        <label asp-for="Empresa" class="form-label"></label>
        <input asp-for="Empresa" class="form-control" />
        <span asp-validation-for="Empresa" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="VagaTitulo" class="form-label"></label>
        <input asp-for="VagaTitulo" class="form-control" />
        <span asp-validation-for="VagaTitulo" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Descricao" class="form-label"></label>
        <textarea asp-for="Descricao" class="form-control" rows="4"></textarea>
        <span asp-validation-for="Descricao" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="FaseCandidatura" class="form-label"></label>
        <select asp-for="FaseCandidatura" asp-items="Html.GetEnumSelectList<FaseCandidatura>()" class="form-select"></select>
        <span asp-validation-for="FaseCandidatura" class="text-danger"></span>
    </div>

    <div class="d-flex justify-content-between">
        <a href="/lead" class="btn btn-secondary">Cancelar</a>
        <button type="submit" class="btn btn-primary">Adicionar</button>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
