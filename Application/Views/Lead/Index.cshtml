@model IEnumerable<Source.Repositories.LeedListRowDto>
@using Source.Models 



<h2>Leads cadastrados</h2>
<a asp-controller="Lead" asp-action="New" class="btn btn-primary">Adicionar</a>
<table class="table table-striped table-bordered mt-3">
    <thead class="table-dark">
        <tr>
            <th>Empresa</th>
            <th>Título da Vaga</th>
            <th>Fase da Candidatura</th>
            <th>Última Atualização</th>
            <th class="text-center">Ações</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var lead in Model)
            {
                <tr>
                    <td>@lead.Empresa</td>
                    <td>@lead.VagaTitulo</td>
                    <td>@lead.FaseCandidatura</td>
                    <td>@lead.DataAtualizacao.ToString("dd/MM/yyyy HH:mm")</td>
                    <td class="text-center">
                        <a asp-action="Details" asp-route-id="@lead.VagaTitulo" class="btn btn-sm btn-info">Detalhes</a>
                        <a asp-action="Edit" asp-route-id="@lead.VagaTitulo" class="btn btn-sm btn-warning">Editar</a>
                        <a asp-action="Delete" asp-route-id="@lead.VagaTitulo" class="btn btn-sm btn-danger">Excluir</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5" class="text-center text-muted">Nenhum lead encontrado.</td>
            </tr>
        }
    </tbody>
</table>